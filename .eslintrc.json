{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["warn", "always", {"omitLastInOneLineBlock": false}],
        "indent":["warn", 4],
        "no-trailing-spaces":["warn", {"skipBlankLines": true, "ignoreComments": false}]
    }
}
